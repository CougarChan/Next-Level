const { Schema, model } = require('mongoose');
//const bcrypt = require('bcrypt');

const userSchema = new Schema (
{
    username: {
        type: String,
        required: true,
        unique: true,
        trim: true
    },

    email: {
        type: String,
        required: true,
        match: [/.+@.+\..+/, 'Must match an email address!'],
        unique: true,
    },

    password: {
        required: true,
        type: String,
        minlength: 9
        
    },

    exercises: [
        {
            type: Schema.Types.ObjectId,
            ref: 'Exercises'
          }
    ]
},

{
    toJSON: {
        virtuals:true
    }
}

)
const User = model('User', userSchema);



module.exports = User